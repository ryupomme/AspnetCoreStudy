
@model AspnetCoreStudy.ViewModel.MypageVM
@{
    //ViewData["Title"] = "mypage";
    ViewBag.Title = "test";
    var mypageData = ViewData["data"] as AspnetCoreStudy.ViewModel.MypageVM;
}
<h1>mypage</h1>

<h3>회원정보</h3>

<span>@Model.member.Name 님은 @Model.member.RankGroup.Name 회원입니다.</span>
<table>
    <caption><쿠폰/적립금 현황></caption>
    <thead>
        <tr>
            <th>보유쿠폰</th>
            <th>보유적립금</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.member.Coupon 장</td>
            <td>@Model.member.Point P</td>
        </tr>
    </tbody>
</table>
<h3>주문현황</h3>
<table>
    <caption>< 주문현황 ></caption>
    <thead>
        <tr>
            <th>상품명</th>
            <th>금액</th>
            <th>수량</th>
            <th>상태</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order order in Model.member.OrderList)
        {
            <tr>
                <td>@order.Product.Name</td>
                <td>@order.TotalPrice 원</td>
                <td>@order.Count 개</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>

<h3>좋아요한 브랜드</h3>
<ul>
    @foreach (WishBrand wishBrand in Model.member.WishBrandList)
    {
        <li>@wishBrand.brand.Name</li>
    }
</ul>

<h3>최근 본 상품</h3>

<h3>좋아요한 상품</h3>
<ul>
    @foreach (WishProduct wishProduct in Model.member.WishProductList)
    {
        <li>@wishProduct.product.Name</li>
    }
</ul>

<h3>최근 본 기획전</h3>
<ul>
    @foreach (Plan plan in Model.planList)
    {
        <li>@plan.Name [@plan.StartDate.ToString("yyyy-MM-dd") ~ @plan.EndDate.ToString("yyyy-MM-dd")]</li>
    }
</ul>